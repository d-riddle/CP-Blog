<%- include("partials/header"); -%>
<h1>Compose</h1>
<form action="/updcompose" method="post">
  <div class="form-group">
    <label for="exampleInputEmail1">Title</label>
    <input type="text" class="form-control" name="postTitle" value="<%=blogppost.btitle%>">
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Post</label>
    <textarea name="postBody" class="form-control" cols="40" rows="5"><%=blogppost.bbody%></textarea>
  </div>
  <input type="hidden" name="postid" value="<%= blogppost._id%>"></input>
  <button type="submit" class="btn btn-primary" name="button">Publish</button>
</form>
<%- include("partials/footer"); -%>
